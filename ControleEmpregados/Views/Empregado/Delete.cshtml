@model ControleEmpregados.Models.Empregado

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@section Styles {
   <!-- Bootstrap CDN -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"/>
<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"/>
<!-- Bootstrap-Iconpicker -->
<link rel="stylesheet" href="dist/css/bootstrap-iconpicker.min.css"/>
}

<div class="card-block">
    <div class="card-header text-white bg-dark text-center h2">Apagar um empregado existente</div>
    <div class="card-body">
        <div class="form-group">
            

            <label asp-for="MATRICULA" class="control-label"></label>
            <br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                    </span>
                </div>
                <input asp-for="MATRICULA" class="form-control" disabled="disabled" />
            </div>
            <label asp-for="NOME" class="control-label"></label>
            <br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="fa fa-user-circle" aria-hidden="true"></i>
                    </span>
                </div>
                <input asp-for="NOME" class="form-control" disabled="disabled" />
            </div>
        </div>
    </div>
    <div class="text-center text-white">>
        <form asp-action="Delete">
            <input type="hidden" asp-for="EmpregadoID" />
            <input type="submit" value="Remover Empregado" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </form>
    </div>
  
        </div>
</div>

@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



